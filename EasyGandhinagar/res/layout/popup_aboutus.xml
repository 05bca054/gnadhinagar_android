<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_height"
        android:layout_marginRight="@dimen/top_height"
        android:background="@drawable/background_dialog"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_hearder_poplocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="About Us"
                android:textColor="#0958B5"
                android:textSize="@dimen/TextSize_mediam"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_about_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_close_dialog" android:layout_marginRight="@dimen/top_height" android:layout_marginTop="@dimen/top_height"/>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/top_height"
            android:layout_marginTop="@dimen/top_height"
            android:background="@drawable/blue_line_dialog" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layoutdialogevent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/top_height"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:ems="10"
                    android:padding="5dp"
                    android:text="Company Name :  Nplussolutions"
                    android:textColor="#0958B5" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:ems="10"
                    android:padding="5dp"
                    android:text="Made by    :  Mehul Tuwar"
                    android:textColor="#0958B5" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:ems="10"
                    android:padding="5dp"
                    android:text="Mobile No.:  +91 99795 89533"
                    android:textColor="#0958B5" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:ems="10"
                    android:padding="5dp"
                    android:text="E-Mail id     :  mehultuwar2001@gmail.com"
                    android:textColor="#0958B5" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>