<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/top_height"
        android:text="Please tap on appropriate icon to get name of place and then tap on name to get route from current location."
        android:textColor="#00FF40"
        android:background="#000000"
        android:textSize="@dimen/TextSize_small" />

    <include layout="@layout/map" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_findrout"
            style="@style/btnStylelBluelight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Root"
            android:textColor="#ffffff"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>